{% extends 'base.html.twig' %}

{% block title %}Casa index{% endblock %}

{% block body %}
    <h1>Casa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Barrio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for casa in casas %}
            <tr>
                <td>{{ casa.id }}</td>
                <td>{{ casa.nombre }}</td>
                <td>{{ casa.direccion }}</td>
                <td>{{ casa.barrio }}</td>
                <td>
                    <a href="{{ path('casa_show', {'id': casa.id}) }}">show</a>
                    <a href="{{ path('casa_edit', {'id': casa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('casa_new') }}">Create new</a>
{% endblock %}
